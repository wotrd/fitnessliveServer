<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.libraryserver.manager.mapper.BookMapper">

    <resultMap type="com.example.libraryserver.manager.po.BookPo" id="bookMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="sellerName" column="seller_name" jdbcType="VARCHAR"/>
        <result property="sellerId" column="seller_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="bookMap">
        select
          id, name, type, price, avatar,seller_id,seller_name, remark
        from library.books
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryLikeName" resultMap="bookMap">
        select
        id, name, type, price, avatar,seller_id,seller_name, remark
        from library.books
        <where>
            <if test="name != null and name != ''">
                and name like concat('%', #{name}, '%')
            </if>
        </where>

    </select>

    <!--查询指定行数据-->
    <select id="queryByName" resultMap="bookMap">
        select
        id, name, type, price, avatar,seller_id,seller_name, remark
        from library.books
        <where>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>

    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="bookMap">
        select
        id, name, type, price, avatar,seller_id,seller_name, remark
        from library.books
        where type = #{type}
        <if test="name != null and name != ''">
            and (name like concat('%', #{name}, '%') or type like concat('%', #{name}, '%')
            or price like concat('%', #{name}, '%'))
        </if>
        order by id desc;
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into library.books(name, type, price, avatar,seller_id,seller_name, remark)
        values (#{name}, #{type}, #{price}, #{avatar},#{sellerId},#{sellerName},#{remark})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update library.books
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from library.books where id = #{id}
    </delete>

    <delete id="deleteByIds">
        delete from library.books
        where id in
        <foreach collection="ids" open="(" close=")" item="id" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>