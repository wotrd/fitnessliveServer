<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.animalsalesserver.manager.mapper.BusinessMapper">

    <resultMap type="com.example.animalsalesserver.manager.po.BusinessPo" id="BusinessesMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="bName" column="b_name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BusinessesMap">
        select
          id, b_name, type, price, avatar
        from animalsales.businesses
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryLikeName" resultMap="BusinessesMap">
        select
        id, b_name, type, price, avatar
        from animalsales.businesses
        <where>
            <if test="name != null and name != ''">
                and b_name like concat('%', #{name}, '%')
            </if>
        </where>

    </select>

    <!--查询指定行数据-->
    <select id="queryByName" resultMap="BusinessesMap">
        select
        id, b_name, type, price, avatar
        from animalsales.businesses
        <where>
            <if test="name != null and name != ''">
                and b_name = #{name}
            </if>
        </where>

    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BusinessesMap">
        select
        id, b_name, type, price, avatar
        from animalsales.businesses
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="bName != null and bName != ''">
                and b_name = #{bName}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="avatar != null and avatar != ''">
                and avatar = #{avatar}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into animalsales.businesses(b_name, type, price, avatar)
        values (#{bName}, #{type}, #{price}, #{avatar})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update animalsales.businesses
        <set>
            <if test="bName != null and bName != ''">
                b_name = #{bName},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from animalsales.businesses where id = #{id}
    </delete>

    <delete id="deleteByIds">
        delete from animalsales.businesses
        where id in
        <foreach collection="ids" open="(" close=")" item="id" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>